{
  "name": "chat",
  "private": true,
  "workspaces": [
    "web"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "air",
    "dev:frontend": "pnpm --filter web dev",
    "dev:probe": "go run cmd/probe/main.go",
    "build": "turbo run build",
    "build:backend": "go build -o ./tmp/main .",
    "build:probe": "go build -o ./tmp/probe ./cmd/probe/main.go",
    "build:frontend": "pnpm --filter web build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check": "turbo run check"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}